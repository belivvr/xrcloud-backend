    "components": {
        "parameters": {
            "ApiKey": {
                "required": true,
                "name": "authorization",
                "in": "header",
                "schema": {
                    "type": "string"
                },
                "description": "헤더에 다음과 같은 형태로 인증 키를 포함시켜야합니다. `Authorization: Bearer {ApiKey}`."
            },
            "PaginationTake": {
                "required": false,
                "name": "take",
                "in": "query",
                "schema": {
                    "type": "number"
                },
                "description": "(pagination) 가져올 데이터의 갯수."
            },
            "PaginationSkip": {
                "required": false,
                "name": "skip",
                "in": "query",
                "schema": {
                    "type": "number"
                },
                "description": "(pagination) 건너뛸 데이터의 갯수."
            },
            "UserId": {
                "required": false,
                "name": "userId",
                "in": "query",
                "schema": {
                    "type": "string"
                },
                "description": "Project(app)의 사용자입니다. Room에 입장하는 사용자를 구분하기 위해 사용됩니다."
            }
        },
        "schemas": {
            "ErrorResponse": {
                "type": "object",
                "properties": {
                    "statusCode": {
                        "type": "number",
                        "description": "HTTP 상태 코드. 실제 값은 오류에 따라 달라집니다.",
                        "example": 400
                    },
                    "method": {
                        "type": "string",
                        "description": "오류를 일으킨 요청의 HTTP 메서드입니다.",
                        "example": "Method"
                    },
                    "url": {
                        "type": "string",
                        "description": "이 오류를 반환한 엔드포인트입니다. 이 값은 엔드포인트에 따라 달라집니다.",
                        "example": "/example/endpoint"
                    },
                    "body": {
                        "type": "object",
                        "description": "오류를 일으킨 요청 본문에 전송된 원본 데이터입니다. 실제 값은 요청에 따라 달라집니다.",
                        "example": { "key": "value" }
                    },
                    "message": {
                        "type": "string",
                        "description": "오류를 설명하는 자세한 오류 메시지입니다.",
                        "example": "Detailed error messages"
                    }
                }
            },
            "CreateAdminRequest": {
                "type": "object",
                "required": [
                    "email",
                    "password"
                ],
                "properties": {
                    "email": {
                        "description": "인증할 XRCLOUD Developers 계정의 이메일입니다.",
                        "type": "string",
                        "example": "xrcloud@belivvr.com"
                    },
                    "password": {
                        "description": "인증할 XRCLOUD Developers 계정의 비밀번호입니다.",
                        "type": "string",
                        "example": "examPassword12!"
                    }
                }
            },
            "CreateAdminSuccessResponse": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "string",
                        "example": "389f0854-231e-4f9e-a0dc-8f801a41fd6a"
                    },
                    "email": {
                        "type": "string",
                        "example": "xrcloud@belivvr.com"
                    }
                }
            },
            "CreateAdminErrorResponse": {
                "type": "object",
                "properties": {
                    "statusCode": {
                        "type": "number",
                        "example": "409"
                    },
                    "method": {
                        "type": "string",
                        "example": "POST"
                    },
                    "url": {
                        "type": "string",
                        "example": "/admins"
                    },
                    "body": {
                        "type": "object",
                        "example": {}
                    },
                    "message": {
                        "type": "string",
                        "example": "Admin with email xrcloud@belivvr.com already exists"
                    }
                }
            },
            "LoginRequest": {
                "type": "object",
                "required": [
                    "email",
                    "password"
                ],
                "properties": {
                    "email": {
                        "type": "string",
                        "description": "인증할 XRCLOUD Developers 계정의 이메일입니다.",
                        "example": "xrcloud@belivvr.com"
                    },
                    "password": {
                        "type": "string",
                        "description": "인증할 XRCLOUD Developers 계정의 비밀번호입니다.",
                        "example": "examPassword12!"
                    }
                }
            },
            "LoginSuccessResponse": {
                "type": "object",
                "properties": {
                    "accessToken": {
                        "type": "string",
                        "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.66jdjBjjKZlsiUuNlMZ20W_zl2ADyT49USZiiENwDCw"
                    },
                    "refreshToken": {
                        "type": "string",
                        "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.vH8jp9p1RJF5lalQ8dCNatVXFbUfPZQByOs20HUwlFw"
                    }
                }
            },
            "LoginErrorResponse": {
                "type": "object",
                "properties": {
                    "statusCode": {
                        "type": "number",
                        "example": "401"
                    },
                    "method": {
                        "type": "string",
                        "example": "POST"
                    },
                    "url": {
                        "type": "string",
                        "example": "/auth/login"
                    },
                    "body": {
                        "type": "object",
                        "example": {}
                    },
                    "message": {
                        "type": "string",
                        "example": "Unauthorized"
                    }
                }
            },
            "RefreshAccessTokenRequest": {
                "type": "object",
                "required": [
                    "refreshToken"
                ],
                "properties": {
                    "refreshToken": {
                        "description": "[로그인](#tag/authentication/operation/Login) 시 발급된 토큰입니다.",
                        "type": "string",
                        "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.7YlBlmZz5v66QaUEidurmkT254FCvFlbdxSjI9u9u4g"
                    }
                }
            },
            "RefreshAccessTokenSuccessResponse": {
                "type": "object",
                "properties": {
                    "accessToken": {
                        "type": "string",
                        "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.66jdjBjjKZlsiUuNlMZ20W_zl2ADyT49USZiiENwDCw"
                    },
                    "refreshToken": {
                        "type": "string",
                        "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.vH8jp9p1RJF5lalQ8dCNatVXFbUfPZQByOs20HUwlFw"
                    }
                }
            },
            "RefreshAccessTokenErrorResponse": {
                "type": "object",
                "properties": {
                    "statusCode": {
                        "type": "number",
                        "example": "401"
                    },
                    "method": {
                        "type": "string",
                        "example": "POST"
                    },
                    "url": {
                        "type": "string",
                        "example": "/auth/refresh"
                    },
                    "body": {
                        "type": "object",
                        "example": {}
                    },
                    "message": {
                        "type": "string",
                        "example": "Unauthorized"
                    }
                }
            },
            "Project": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "string",
                        "description": "(project_id) Project의 고유 ID입니다.",
                        "example": "f24ee5ba-8f1f-4f7a-86ed-738f95ea1f8b"
                    },
                    "name": {
                        "type": "string",
                        "description": "Project의 이름입니다.",
                        "example": "example project name"
                    },
                    "createdAt": {
                        "type": "string",
                        "format": "date-time",
                        "description": "Project가 생성된 날짜와 시간입니다.",
                        "example": "2023-07-12T09:27:41.600Z"
                    },
                    "updatedAt": {
                        "type": "string",
                        "format": "date-time",
                        "description": "Project가 마지막으로 업데이트된 날짜와 시간입니다.",
                        "example": "2023-07-12T09:27:41.600Z"
                    },
                    "faviconUrl": {
                        "type": "string",
                        "description": "Project의 파비콘 URL입니다.",
                        "example": "https://kr.object.ncloudstorage.com/favicon/4a3/4a3e946e-2776-4182-afb7-204d982b727d.ico"
                    },
                    "logoUrl": {
                        "type": "string",
                        "description": "Project 로고의 URL입니다.",
                        "example": "https://kr.object.ncloudstorage.com/favicon/51d/51dc73cc-36db-4046-af8d-1e61e4b59c19.jpg"
                    },
                    "sceneCreationUrl": {
                        "type": "string",
                        "description": "Scene을 생성할 공간의 URL입니다.",
                        "example": "https://xrcloud.app:4000/spoke/projects/new?token=eyJhbGciOiJIUzUxMiIsInR5cCI6IkpXVCJ9..."
                    }
                }
            },
            "Scene": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "string",
                        "description": "(scene_id) Scene의 고유 ID입니다.",
                        "example": "f24ee5ba-8f1f-4f7a-86ed-738f95ea1f8b"
                    },
                    "name": {
                        "type": "string",
                        "description": "Scene의 이름입니다.",
                        "example": "example scene name"
                    },
                    "thumbnailUrl": {
                        "type": "string",
                        "description": "Scene의 thumbnail URL입니다.",
                        "example": "https://api.xrcloud.app/files/852a6f47-3978-4201-a637-9699d7845266.jpg"
                    },
                    "sceneModificationUrl": {
                        "type": "string",
                        "description": "Scene을 수정할 공간의 URL입니다.",
                        "example": "https://xrcloud.app:4000/spoke/projects/ASJCJK1?token=eyJhbGciOiJIUzUxMiIsInR5cCI6IkpXVCJ9..."
                    }
                }
            },
            "Room": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "string",
                        "description": "(room_id) Room의 고유 ID입니다.",
                        "example": "f24ee5ba-8f1f-4f7a-86ed-738f95ea1f8b"
                    },
                    "name": {
                        "type": "string",
                        "description": "Room의 이름입니다.",
                        "example": "example room name"
                    },
                    "size": {
                        "type": "number",
                        "description": "Room에 입장할 수 있는 최대 인원 수입니다.",
                        "example": 10
                    },
                    "sceneId": {
                        "type": "string",
                        "description": "Scene의 ID(uuid)입니다.",
                        "example": "c322b49b-6e12-47d9-b293-b5ab3727459c"
                    },
                    "createdAt": {
                        "type": "string",
                        "format": "date-time",
                        "description": "Room이 생성된 날짜와 시간입니다.",
                        "example": "2023-07-12T09:27:41.600Z"
                    },
                    "updatedAt": {
                        "type": "string",
                        "format": "date-time",
                        "description": "Room을 마지막으로 업데이트한 날짜와 시간입니다.",
                        "example": "2023-07-12T09:27:41.600Z"
                    },
                    "roomUrl": {
                        "type": "string",
                        "description": "Room에 입장할 URL입니다.",
                        "example": "https://xrcloud.app:4000/7UizZDL/example-room-name?token=WRlNDAtNWQ0OC00NjZjLWFlYTUtOTNkZDA1Yj..."
                    },
                    "thumbnailUrl": {
                        "type": "string",
                        "description": "Room의 thumbnail URL입니다.",
                        "example": "https://api.xrcloud.app/files/852a6f47-3978-4201-a637-9699d7845266.jpg"
                    }
                }
            },
            "GetProjectsSuccessResponse": {
                "type": "object",
                "properties": {
                    "items": {
                        "type": "array",
                        "items": {
                            "$ref": "#/components/schemas/Project"
                        },
                        "description": "Project 목록입니다."
                    },
                    "total": {
                        "type": "number",
                        "description": "총 Project의 갯수입니다."
                    },
                    "skip": {
                        "type": "number",
                        "description": "Pagination을 위해 건너뛴 항목 수입니다."
